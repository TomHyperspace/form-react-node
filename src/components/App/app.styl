@import "~/styles/vars"

.page-nav
	position: absolute;
	top: 0;
	right: 0;
	left: 0;
	display: flex;
	justify-content: space-around;
	flex-wrap: nowrap;
	height: 50px;
	max-width: 100%;
	background-color: white;


	h1
		text-align: left
		text-transform: uppercase
		margin-top: 1em
		font-size: 1.5em
		color: $color-title


	&-bar
		display: flex
		justify-content: flex-end
		margin-top: 1em
		padding: 0

	&-bar
	a
		display: inline-block
		color: $color-title
		list-style: none;
		margin-right: 10px;


.app
	color: $color-text
	max-width: 360px
	margin: 5em auto


	&-title
		color: $color-title
		font-family: Cinzel
		font-size: 2em
		text-transform: lowercase
		margin: auto

	&-desc
		font-size: 1.1em
		line-height: 1.4
		margin: .25em 0

	&-link
		color: $color-link
		cursor: pointer
		display: block
		font-size: 1.1em
		margin: 1em 0
		text-align: center
		text-decoration: underline

		&--back
			text-align: left

			&::before
				content: ""
				display: inline-block
				background: url("./assets/images/arrow.svg") no-repeat center
				background-size: contain
				width: .8em
				height: .8em
				margin-right: .25em
				transform: rotate(.5turn)

.form
	margin: 1em 0

	&-signup
		background: $color-button-background
		border: 0
		border-radius: 0
		color: $color-button
		font-size: 1m
		display: block
		text-transform: uppercase
		height: 3.3em
		width: 100%

		&.form-signup--login
			display: flex
			align-items: center
			justify-content: center
			&::before
				content: ""
				background: url("./assets/images/cat.svg") no-repeat bottom left
				background-size: contain
				height: 1.5em
				width: 1.5em
				margin-right: .6em
